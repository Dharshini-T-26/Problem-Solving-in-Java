import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int sum =0;
        n =Math.abs(n);
        int temp =n;
        
        int x = n%10;
        while(temp>=10)
        {
            temp=temp/10;
        }
        sum = temp+x;
        System.out.println(sum);
        s.close();
    }
}

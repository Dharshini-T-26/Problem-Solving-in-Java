import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int temp = n;
        int rev =0;
        
        if(n<=0)
        {
            System.out.print("false");
        }
        else{
        while(n>0)
        {
            rev = (rev*10) + (n%10);
            n/=10;
        }
        System.out.print(rev==temp);
        }
            
    }
}
